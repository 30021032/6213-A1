        <TextBox HorizontalAlignment="Center" Margin="0,198,0,0" Text="Username" TextWrapping="Wrap" VerticalAlignment="Top" Width="256"/>
        <TextBox HorizontalAlignment="Center" Text="Password" TextWrapping="Wrap" VerticalAlignment="Center" Width="256"/>
        <Button x:ConnectionId='3' Content="Login" Margin="435,271,0,0" VerticalAlignment="Top" Width="75"                     />
    </Grid>
